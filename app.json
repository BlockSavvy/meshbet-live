{
  "expo": {
    "name": "MeshBet Live",
    "slug": "meshbet-live",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "meshbet",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.meshbet.live",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "MeshBet uses Bluetooth to discover nearby viewing parties",
        "NSBluetoothPeripheralUsageDescription": "MeshBet uses Bluetooth to connect to mesh networks",
        "NSLocationWhenInUseUsageDescription": "MeshBet uses location for geohash-based event discovery",
        "NSCameraUsageDescription": "MeshBet uses the camera to stream live video to your viewing party",
        "NSMicrophoneUsageDescription": "MeshBet uses the microphone for live audio streaming",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.meshbet.live",
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_ADVERTISE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "MeshBet uses location for geohash-based event discovery"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "MeshBet uses the camera to stream live video to your viewing party",
          "microphonePermission": "MeshBet uses the microphone for live audio streaming",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#00ffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6b24eab9-a29e-46d0-8520-84aaafbe3e07"
      }
    },
    "owner": "blocksavvy"
  }
}
